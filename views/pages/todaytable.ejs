<style>
    th{
        border-color: #730041;
        background-color: #950054;
        position: -webkit-sticky;
        position: sticky;
        top: 0;
    }

    #td{
        border: 1px solid;
        border-color: #730041;
    }

    .row-1{
        background-color: #B90169;
    }

    .row-2{
        background-color: #CC2583;
    }

    table{
        width: 100%;
        border-collapse: collapse;
        color: #FF905A;
        text-shadow:1px 1px black;
        font-size: 22px;;
    }

    /* width */
    ::-webkit-scrollbar {
    width: 3px;
    }

    /* Track */
    ::-webkit-scrollbar-track {
    box-shadow: inset 0 0 5px #902F00;
    border-radius: 10px;
    }

    /* Handle */
    ::-webkit-scrollbar-thumb {
    background: #FF722E;
    border-radius: 10px;
    }
</style>


<table class="roboto-condensed-thin">
    <tr>
        <th>Time</th>
        <th>Item</th>
        <th>Calories</th>
    </tr>

    <% let count = 1 %>
    <% entries.forEach(entry => { %>
        <tr class="<%='row-'+count%>">
            <td><%=entry.entry_time%></td>
            <td><%=entry.entry_name%></td>
            <td><%=entry.entry_calories%></td>
        </tr>
        <% count = (count==1) ? 2 : 1 %>
    <%});%>

</table>